<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlogo"
    tools:context="com.example.adams.tradersportal.PaymentActivity">

    <TextView
        android:text="Card No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvcardno"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />



    <TextView
        android:text="Month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvmonth"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:hint="Enter Your Card Number Here"
        android:background="@drawable/primary_light_rounded_rectangle"
        android:layout_below="@+id/tvcardno"
        android:textColorHint="@color/dot_active"
        android:id="@+id/etcardno"
        android:textColor="@color/white"
        android:maxLength="16"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:hint="Enter Month"
        android:textColorHint="@color/dot_active"
        android:id="@+id/etmonth"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/primary_light_rounded_rectangle"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginStart="100dp" />

    <TextView
        android:text="Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvyear"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/etmonth"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:hint="Enter Year"
        android:background="@drawable/primary_light_rounded_rectangle"
        android:id="@+id/etyear"
        android:textColorHint="@color/dot_active"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:maxLength="4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="100dp" />

    <TextView
        android:text="CVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:id="@+id/tvcvv"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbsave"
        android:text="Save This Card for Future Checkout"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/buttonsignup"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="264dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/primary_light_rectangle"
        android:gravity="center"
        android:minWidth="90dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:text="proceed"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:hint="Enter CVV Number Here"
        android:ems="10"
        android:maxLength="3"
        android:textColor="@color/white"
        android:background="@drawable/primary_light_rounded_rectangle"
        android:textColorHint="@color/dot_active"
        android:id="@+id/etcvv"
        android:textAlignment="center"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230dp"
        android:layout_marginStart="100dp" />

</android.support.constraint.ConstraintLayout>
