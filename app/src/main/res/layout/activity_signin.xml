<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlogo"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.adams.tradersportal.SigninActivity">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="116dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tradelogo" />

        <EditText
            android:id="@+id/editTextEmail1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/primary_light_rounded_rectangle"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="140"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/dot_active"
            android:textColorHint="@color/dot_active"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextPassword1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/primary_light_rounded_rectangle"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="8"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/dot_active"
            android:textColorHint="@color/dot_active"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonsignin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="40dp"
            android:background="@drawable/primary_light_rectangle"
            android:gravity="center"
            android:minWidth="100dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="signin"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:text="Create New Account"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
